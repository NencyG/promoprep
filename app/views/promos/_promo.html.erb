<div id="<%= dom_id promo %>">
  <p>
    <strong>Name:</strong>
    <%= promo.name %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= format_date(promo.start_date) %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= format_date(promo.end_date) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= promo.description %>
  </p>

  <p>
    <strong>Companies:</strong>
    <%= promo.company_id %>
  </p>

</div>
