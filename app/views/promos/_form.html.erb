<%= form_with(model: promo) do |form| %>
  <% if promo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(promo.errors.count, "error") %> prohibited this promo from being saved:</h2>

      <ul>
        <% promo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %><br>
  </div>

  <div class="md-form md-outline input-with-post-icon datepicker" id="customDays">
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date, placeholder: "Select date", id: "Customization", class: "form-control" %><br>
    <i class="fas fa-calendar input-prefix" tabindex=0></i>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date, id: "Customization", class: "form-control" %><br>
    <i class="fas fa-calendar input-prefix" tabindex=0></i>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, id: "Customization", class: "form-control"  %><br>
  </div>

  <div>
    <span>Select Company</span><%= form.collection_select(:company_id, @company, :id, :name, {}, class: "form-control" , id: 'select_company', data: { style: "form-control", size: "5" })%><br>
  </div>

  <div>
    <span>Select Filter</span><%= form.collection_select(:filter_option_ids, FilterOption.all, :id, :name, {}, multiple: true, class: "form-control" , id: 'select_filter')%><br>
  </div>

  <div>  
    <%= form.submit 'Submit', class: "btn btn-success" %>
  </div>
<% end %>
