<div id="<%= dom_id promo %>">
  <p>
    <strong>Name:</strong>
    <%= promo.name %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= promo.start_date.strftime("%m/%d/%Y") %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= promo.end_date.strftime("%m/%d/%Y") %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= promo.description %>
  </p>

  <p>
    <strong>Companies:</strong>
    <%= promo.company_id %>
  </p>

</div>
